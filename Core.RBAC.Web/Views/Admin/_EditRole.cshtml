@model Core.Models.RoleViewModel

@{
	Layout = null;
}


<input type="hidden" id="header" value="Edit Role" />
<div class="row">
	<div class="alert alert-warning" role="alert">
		<h6 class="alert-heading mb-2">Warning</h6>
		<p class="mb-0">By editing the Role name, you might break the system authorization and permissions functionality. Please ensure you're absolutely certain before proceeding.</p>
	</div>
	<div class="col-md-12">
		<form asp-action="EditRole">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group mt-3">
				<input type="submit" value="Submit" class="btn btn-outline-primary btn-sm" />
			</div>
		</form>
	</div>
</div>