@model System.Security.Claims.Claim
@{
    Layout = null;
    var id = ViewBag.UserId;
}

<input type="hidden" id="header" value="Edit Claim" />

<form method="post" asp-action="EditClaims">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" id="UserId" name="Id" value="@id" />
        <input type="hidden" asp-for="Type" />
        <label for="oldValue" class="form-label">Old Value</label>
        <input name="oldValue" value="@Model.Value" class="form-control" readonly />
       

    </div>
    <div class="form-group mt-1">
        <label for="oldValue" class="form-label">New Value</label>
        <input class="form-control" name="value" value="@Model.Value" />
        </div>

    <div class="form-group mt-3">
        <button type="submit"
                class="btn btn-sm btn-outline-primary">
            Submit
        </button>

    </div>

</form>