@model System.Security.Claims.Claim
@{
    Layout = null;
    var id = ViewBag.UserId;
}

<input type="hidden" id="header" value="Delete Claim" />
<form method="post" asp-action="DeleteClaims">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" id="UserId" name="Id" value="@id" />
        <input type="hidden" asp-for="Type" />
        <input type="hidden" asp-for="Value" />
        <h6>Are You Sure Want To Delete?</h6>
    </div>


    <div class="form-group">
        <button type="submit"
                class="btn btn-sm btn-outline-primary">
            Submit
        </button>

    </div>

</form>