@model IEnumerable<System.Security.Claims.Claim>
@{
    ViewData["Title"] = "Manage Claims";
    var id = ViewBag.UserId;
}
<h4>Manage User Claims</h4>
<div class="row mt-3">
    <div class="col-md-12">
        @if (ViewBag.FilterOption != null)
        {
            foreach (var Ctr in ViewBag.FilterOption)
            {
                <a id="FilterOptions_@Ctr" class="btn btn-outline-info btn-sm"
                   href="/Admin/ClaimList?id=@id&filterOption=@Ctr" data-modal-filter-option="">@Ctr</a>
            }
        }
    </div>
</div>


<div class="row mt-4">
    <div class="dol-md-12" id="replacetarget">
    </div>
</div>
<script>
    window.onload = function () {
        $('#replacetarget').load('/Admin/ClaimList?id=@id&filterOption=All');
    };
    $(document).on("click", "a[data-modal-filter-option]", function (e) {
        $('#replacetarget').load(this.href);
        return false;
    });
</script>
