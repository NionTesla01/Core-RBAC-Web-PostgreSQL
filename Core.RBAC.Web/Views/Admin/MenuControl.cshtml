
@{
	ViewData["Title"] = "Manage Menu Controls";
}
<h4>Manage Menu Controls</h4>

<div class="row mt-3">
	<div class="col-md-12">
		@if (ViewBag.FilterOption != null)
		{
			foreach (var Ctr in ViewBag.FilterOption)
			{
				<a id="FilterOptions_@Ctr" class="btn btn-outline-info btn-sm"
				   href="/Admin/MenuControlList?filterOption=@Ctr" data-modal-filter-option="">@Ctr</a>
			}
		}
	</div>
</div>
<div class="row mt-4">
	<div class="col-md-12">
		<a id="NodePermissions" class="btn btn-outline-info btn-sm"
		   href="/Admin/NodePermissions">Node Roles</a>
	</div>
	<div class="col-sm-12" id="replacetarget">
	</div>
</div>
<script>
	window.onload = function () {
		$('#replacetarget').load('/Admin/MenuControlList?filterOption=All');
	};
	$(document).on("click", "a[data-modal-filter-option]", function (e) {
		$('#replacetarget').load(this.href);
		return false;
	});
</script>

